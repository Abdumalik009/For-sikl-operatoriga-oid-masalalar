package For;

import java.util.Scanner;

public class For29 {
public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        System.out.print("A ni kiriting (haqiqiy son): ");
        double A = input.nextDouble();

        System.out.print("B ni kiriting (haqiqiy son, B > A): ");
        double B = input.nextDouble();


        System.out.print("n ni kiriting (n butun son): ");
        int n = input.nextInt();

        double k = (B - A) / n;
    

        System.out.println("Ajratilgan nuqtalar:");

        for (int i = 0; i <= n; i++) {
        double sum = A + i * k;
        System.out.println("Nuqta " + (i + 1) + ": " + sum);
        }

        }
}
